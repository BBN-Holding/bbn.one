{
    "imports": {
        "@std/assert": "jsr:@std/assert@^1.0.3",
        "@std/async": "jsr:@std/async@^1.0.4",
        "@std/collections": "jsr:@std/collections@^1.0.5",
        "@std/datetime": "jsr:@std/datetime@^0.225.1",
        "@std/encoding": "jsr:@std/encoding@^1.0.3",
        "@std/fmt": "jsr:@std/fmt@^1.0.1",
        "@std/path": "jsr:@std/path@^1.0.3",
        "shared/": "./pages/shared/",
        // "webgen/": "../WebGen/"
        "webgen/": "https://raw.githubusercontent.com/lucsoft/WebGen/55033da/"
    },
    "lock": false,
    "compilerOptions": {
        "lib": [
            "dom",
            "dom.iterable",
            "dom.asynciterable",
            "deno.ns",
            "deno.unstable"
        ]
    },
    "tasks": {
        "start": "deno run -A serve.ts"
    },
    "lint": {
        "exclude": [
            "dist"
        ]
    },
    "fmt": {
        "exclude": [
            "dist",
            "assets",
            "static"
        ],
        "indentWidth": 4,
        "proseWrap": "never",
        "lineWidth": 500
    }
}
